<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/rounded_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/star_outline"
        android:id="@+id/add_to_favorite"
        app:layout_constraintTop_toTopOf="@id/linear1"
        app:layout_constraintRight_toRightOf="@id/linear1"
        />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider5"
        android:showDividers="middle"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linear1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/people_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/people_gender"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/people_starship_count"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/planet"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        android:id="@+id/planet_text"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:divider="@drawable/divider5"
        android:showDividers="middle"
        app:layout_constraintTop_toBottomOf="@id/planet_text"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/people_planet_name"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/people_planet_diametr"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/people_planet_population"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>